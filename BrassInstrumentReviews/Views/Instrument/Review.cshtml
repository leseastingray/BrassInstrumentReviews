@model Review
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Write a Review</title>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/popper.js/cjs/popper.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>

    <script src="~/lib/jquery-validate/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</head>
<body>
    <nav class="navbar navbar-expand-md navbar-dark bg-primary">
        <a class="navbar-brand" href="/">Brass Instrument Reviews</a>
        <button class="navbar-toggler" type="button"
                data-toggle="collapse" data-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <nav class="collapse navbar-collapse" id="navbarSupportedContent">
            <div class="navbar-nav mr-auto">
                <a class="nav-item nav-link" href="/">Home</a>
                <a class="nav-item nav-link" href="/Instrument">Instruments</a>
                <a class="nav-item nav-link active" href="/Instrument/Review">Write a Review</a>
                <a class="nav-item nav-link" href="/Instrument/Reviews">See the Reviews</a>
            </div>
        </nav>
    </nav>
    <h1>Instrument Review Form</h1>
    <form asp-action="Index" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div>
            <label asp-for="InstrumentName">Instrument Name (Conn 8D, Reynolds Contempora, etc.):</label>
            <input asp-for="InstrumentName" />
        </div>
        <div>
            <label asp-for="InstrumentType">Instrument Type (French horn, Bass trombone, etc.):</label>
            <input asp-for="InstrumentType" />
        </div>
        <div>
            <label>Your Rating:</label>
            <select asp-for="Rating">
                <option value="0">Worst</option>
                <option value="1">Bad</option>
                <option value="2">Okay</option>
                <option value="3">Good</option>
                <option value="4">Great</option>
                <option value="5">Best</option>
            </select>
        </div>
        <div>
            <label asp-for="ReviewText">Review Text</label>
            <textarea asp-for="ReviewText"></textarea>
        </div>
        <div>
            <label asp-for="ReviewDate">Review Date:</label>
            <input asp-for="ReviewDate" />
        </div>
        <button type="submit">Submit</button>
        <a asp-action="Index">Clear</a>
    </form>
</body>
</html>