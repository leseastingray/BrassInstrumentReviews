@model List<Review>
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Write a Review</title>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/popper.js/cjs/popper.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>

    <script src="~/lib/jquery-validate/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</head>
<body>
    <nav class="navbar navbar-expand-md navbar-dark bg-primary">
        <a class="navbar-brand" href="/">Brass Instrument Reviews</a>
        <button class="navbar-toggler" type="button"
                data-toggle="collapse" data-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <nav class="collapse navbar-collapse" id="navbarSupportedContent">
            <div class="navbar-nav mr-auto">
                <a class="nav-item nav-link" href="/">Home</a>
                <a class="nav-item nav-link" href="/Instrument">Instruments</a>
                <a class="nav-item nav-link" href="/Instrument/Review">Write a Review</a>
                <a class="nav-item nav-link active" href="/Instrument/Reviews">See the Reviews</a>
            </div>
        </nav>
    </nav>
    <div class="text-center">
        <h1>Here are the Reviews!</h1>
    </div>
    <p>
        This page will have a table of all the reviews, drawn from a list.
    </p>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Instrument Name</th>
                <th>Instrument Type</th>
                <th>Rating</th>
                <th>Review Text</th>
                <th>Reviewer Name</th>
                <th>Review Date</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <!-- foreach review in List, create a table row and fill out the columns -->
            @if (Model != null)
            {
                @foreach (var review in Model)
                {
                <tr>
                    <td>@review.InstrumentName</td>
                    <td>@review.InstrumentType</td>
                    <td>@review.Rating</td>
                    <td>@review.ReviewText</td>
                    <td>@review.ReviewerName</td>
                    <td>@review.ReviewDate</td>
                    <td>
                        <a asp-controller="Instrument" asp-action="ReviewDetail"
                           asp-route-id="@review.ReviewID">Details/Edit</a>
                        <a asp-controller="Instrument" asp-action="Delete"
                           asp-route-id="@review.ReviewID">Delete</a>
                    </td>
                </tr>
                 }
             }
        </tbody>
    </table>
</body>
</html>